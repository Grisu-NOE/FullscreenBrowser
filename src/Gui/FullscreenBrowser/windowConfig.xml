<?xml version="1.0" encoding="utf-8" ?>
<BrowserConfig>
  <Runtime>Firefox64</Runtime>
  <PrintSettings>
    <!--URL zum Infoscreen-Depeschen-Druckservice - nicht verändern!-->
    <PrintUrl>https://infoscreen.florian10.info/ows/infoscreen/einsatz.ashx</PrintUrl>
    <!--<PrintUrl>https://infoscreen.florian10.info/ows/infoscreen/demo.ashx?demo=1</PrintUrl>-->
    <!--Port zum Infoscreen-Depeschen-Druckservice - nicht verändern!-->
    <PrintPort>121</PrintPort>
    <!--Mögliche Werte für printEnabled: "true" oder "false" - Gib an ob das Infoscreen-Depeschen-Druckservice verwendet wird-->
    <PrintEnabled>true</PrintEnabled>
    <!--Mögliche Werte für PrintOnEmergency: "true" oder "false" - Wenn der Druuckservice eingeschalten ist kann zusätzlich bei einem auftretenden Einsatz automatisch ein Ausdruck erfolgen-->
    <PrintOnEmergency>false</PrintOnEmergency>
    <!--Mögliche Werte für NumberOfPagesPerClick: integer(ganze Zahl) - Gibt an wieviele Kopien gemacht werden sollen wenn der Druckvorgang manuell angestoßen wird-->
    <NumberOfPagesPerClick>2</NumberOfPagesPerClick>
    <!--Mögliche Werte für NumberOfPagesOnEmergency: integer(ganze Zahl) - Gibt an wieviele Kopien gemacht werden sollen wenn der Druckvorgang automatisch angestoßen wird-->
    <NumberOfPagesOnEmergency>3</NumberOfPagesOnEmergency>
  </PrintSettings>
  <!--mögliche Werte für DisableScreensaverPermanently: "true" oder "false" - gibt an, ob der Screensaver permanent deaktiviert werden soll-->
  <DisableScreensaverPermanently>false</DisableScreensaverPermanently>
  <!--mögliche Werte für DisablePowerManagement: "true" oder "false" - gibt an, ob die Energieverwaltung von Windows nicht gesetzt werden soll (in Standby gehen, ...). !!! ACHTUNG: Bei false sind Administrator-Rechte erforderlich !!!-->
  <DisablePowerManagement>false</DisablePowerManagement>
  <!--Der Screenrefresher sind Balken in weiß, schwarz, rot, grün und blau, die quer über den Schirm laufen in den definierten Zeiten und so ein Einbrennen des Bildes verhindern-->
  <ScreenRefresher>
    <!--Mögliche Werte für Enabled: "true" oder "false" - Gibt an ob die Funktion zum refreshen der LCD-Pixel aktiviert ist-->
    <Enabled>true</Enabled>
    <!--Mögliche Werte für RunAtStartup: "true" oder "false" - Gibt an ob die Funktion beim Starten der Applikation ausgeführt werden soll-->
    <RunAtStartup>true</RunAtStartup>
    <!--Mögliche Werte für Duration: integer(ganze Zahl) in Sekunden - Gibt an wie lange der Balken pro durchlauf benötigt um einmal über den gesamten Bildschirm zu scrollen-->
    <Duration>30</Duration>
    <!--Mögliche Werte für Interval: integer(ganze Zahl) in Minuten - Gibt den zeitlichen Abstand zwischen zwei Durchgängen an-->
    <Interval>60</Interval>
    <!--Mögliche Werte für Height: integer(ganze Zahl) in Pixel - Gibt die Höhe des Balkens an -> desto Breiter, desto mehr wird die CPU belastet -> besser den Wert von Duration erhöhen-->
    <Height>50</Height>
  </ScreenRefresher>
  <Proxy>
    <!--mögliche Werte für typ: NoProxy = kein Proxy, Manual = manuell (Server und Port erforderlich)l, AutoConfigurationPac = automatisch (PAC, URL erforderlich), AutoDetect = automatisch erkennen, SystemProxy = Systemproxy -->
    <Type>NoProxy</Type>
    <!--mögliche Werte für server: IP-Adresse oder Hostname des Proxyservers, Pflichtfeld wenn bei type 1 eingetragen ist - gibt IP/Hostname des Proxyservers an-->
    <Server></Server>
    <!--mögliche Werte für port: Zahl, Pflichtfeld wenn bei type 1 eingetragen ist - gibt den Port des Proxyservers an-->
    <Port>0</Port>
    <!--mögliche Werte für URL: URL auf eine Proxy-Config http://.../xyz.PAC, Pflichtfeld wenn bei type 2 eingetragen ist - gibt die URL zu einer automatischen Proxy-Config an-->
    <Url></Url>
  </Proxy>
  <!--mögliche Werte für ClearCookiesAtStartup: "true" oder "false" - gibt an, ob die gespeicherte Infoscreen-Zuordnung bei jedem Programmstart gelöscht wird (neuer Token) - true ist nur beim Testen sinnvoll-->
  <ClearCookiesAtStartup>false</ClearCookiesAtStartup>
  <!--Mögliche Werte für ShowClosedWindowsInMinutes: beliebige ganze Zahl größer 0 - Gibt an, nach wievielen Minuten die geschlossenen Fenster wieder angezeigt werden sollen-->
  <ShowClosedWindowsInMinutes>3</ShowClosedWindowsInMinutes>
  <Window>
    <!--mögliche Werte für Autostart: "true" oder "false" - gibt an, ob das Fenster beim Programmstart geöffnet werden soll-->
    <Autostart>true</Autostart>
    <!--mögliche Werte für OnTop: "true" oder "false" - gibt an, ob das Fenster immer im Vordergrund sein soll-->
    <OnTop>true</OnTop>
    <!--mögliche Werte für name: beliebiger Text - gibt den Namen des Fensters im Trayicon an-->
    <Name>Infoscreen</Name>
    <!--mögliche Werte für URL: eine beliebige URL - Adobe Flash auf der Webseite wird nicht unterstützt-->
    <!--<Url>https://infoscreen.florian10.info/ows/infoscreen/v3/?demo=1</Url>-->
    <Url>https://infoscreen.florian10.info/</Url>
    <!--mögliche Werte für showOnScreen: 0, 1, 2,... je nach Anzahl der vorhandenen Bildschirme beginnend bei 0 für den ersten Schirm - gibt an auf welchem Schirm das Fenster gezeigt werden soll-->
    <ShowOnScreen>1</ShowOnScreen>
    <Position>
      <!--mögliche Werte für PosX und PosY: beliebige Zahl in Pixel - gibt an, wo auf dem Schirm das Fenster gezeigt werden soll, es können damit auch mehrere Fenster auf einem Schirm angzeigt werden-->
      <PosX>0</PosX>
      <PosY>0</PosY>
    </Position>
    <Dimensions>
      <!--mögliche Werte für width: max für vollen Bildschirm, max2 für Vollbild über 2 Bildschirm oder eine beliebige Zahl für eine bestimmte Breite des Fensters-->
      <Width>max2</Width>
      <!--mögliche Werte für height: max für vollen Bildschirm oder eine beliebige Zahl für eine bestimmte Höhe des Fensters-->
      <Height>max</Height>
    </Dimensions>
    <!--Mögliche Werte für ReloadInSeconds: integer(ganze Zahl) in Sekunden >0 - Gibt an nach wievielen Sekunden der Browser ein Reload/Refresh durchführen soll-->
    <ReloadInSeconds>86400</ReloadInSeconds>
  </Window>
  <Window>
    <!--mögliche Werte für Autostart: "true" oder "false" - gibt an, ob das Fenster beim Programmstart geöffnet werden soll-->
    <Autostart>true</Autostart>
    <!--mögliche Werte für OnTop: "true" oder "false" - gibt an, ob das Fenster immer im Vordergrund sein soll-->
    <OnTop>true</OnTop>
    <!--mögliche Werte für name: beliebiger Text - gibt den Namen des Fensters im Trayicon an-->
    <Name>Infoscreen Ruhebildschirm</Name>
    <!--mögliche Werte für URL: eine beliebige URL - Adobe Flash auf der Webseite wird nicht unterstützt-->
    <Url>http://www.feuerwehr-krems.at/Warnung/teaser_noe_all.asp</Url>
    <!--mögliche Werte für IsAlternativeWindow: "true" oder "false" - gibt an, ob das Fenster dargestellt werden soll wenn kein Einsatz aktiv ist-->
    <IsAlternativeWindow>true</IsAlternativeWindow>
    <!--mögliche Werte für showOnScreen: 0, 1, 2,... je nach Anzahl der vorhandenen Bildschirme beginnend bei 0 für den ersten Schirm - gibt an auf welchem Schirm das Fenster gezeigt werden soll-->
    <ShowOnScreen>1</ShowOnScreen>
    <Position>
      <!--mögliche Werte für posX und posY: beliebige Zahl in Pixel - gibt an, wo auf dem Schirm das Fenster gezeigt werden soll, es können damit auch mehrere Fenster auf einem Schirm angzeigt werden-->
      <PosX>0</PosX>
      <PosY>0</PosY>
    </Position>
    <Dimensions>
      <!--mögliche Werte für width: max für vollen Bildschirm, max2 für Vollbild über 2 Bildschirm oder eine beliebige Zahl für eine bestimmte Breite des Fensters-->
      <Width>max2</Width>
      <!--mögliche Werte für height: max für vollen Bildschirm oder eine beliebige Zahl für eine bestimmte Höhe des Fensters-->
      <Height>max</Height>
    </Dimensions>
  </Window>
